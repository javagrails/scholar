<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <!-- NO CONSOLE APPENDER - only log to file or nowhere -->

  <!-- Optional: Log to file for debugging -->
  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>/Users/salehpc/mcp-server.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>logs/mcp-server.%d{yyyy-MM-dd}.log</fileNamePattern>
      <maxHistory>7</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <root level="INFO">
    <!-- Only file appender - NO CONSOLE -->
    <appender-ref ref="FILE"/>
  </root>
</configuration>
